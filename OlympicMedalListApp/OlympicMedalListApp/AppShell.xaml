<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlympicMedalListApp.AppShell"
            x:Name="page"
       xmlns:views="clr-namespace:OlympicMedalListApp.Views"
       >

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Medal List" Icon="icon_medal.png">
            <ShellContent Title="Country Medal List" ContentTemplate="{DataTemplate views:CountryMedalListPage}"/>
            <ShellContent Title="Athlete Medal List" ContentTemplate="{DataTemplate views:AthleteMedalListPage}"/>
        </Tab>

        <ShellContent Title="News" ContentTemplate="{DataTemplate views:NewsPage}"/>


    </FlyoutItem>

</Shell>